{
  "name": "woly-cnc-backend",
  "version": "1.0.0",
  "description": "Command & Control backend for distributed WoLy Wake-on-LAN management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start-ts": "ts-node src/server.ts",
    "init-db": "ts-node src/init-db.ts",
    "test": "npm run test:preflight && jest",
    "test:watch": "npm run test:preflight && jest --watch",
    "test:ci": "npm run test:preflight && jest",
    "test:coverage": "npm run test:preflight && jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop woly-cnc",
    "pm2:restart": "pm2 restart woly-cnc",
    "pm2:logs": "pm2 logs woly-cnc",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete woly-cnc",
    "prod": "npm run build && npm run pm2:start",
    "typecheck": "tsc --noEmit",
    "test:preflight": "node scripts/test-preflight.js"
  },
  "keywords": [
    "wake-on-lan",
    "wol",
    "network-management",
    "distributed-systems"
  ],
  "author": "WoLy Team",
  "license": "MIT",
  "dependencies": {
    "@kaonis/woly-protocol": "^1.0.1",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
