{
  "name": "@woly-server/cnc",
  "version": "1.0.0",
  "description": "Command & Control backend for distributed WoLy Wake-on-LAN management",
  "license": "Apache-2.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc && cp src/database/*.sql dist/database/",
    "start": "node dist/server.js",
    "start-ts": "ts-node src/server.ts",
    "init-db": "ts-node src/init-db.ts",
    "test": "npm run test:preflight && jest",
    "test:watch": "npm run test:preflight && jest --watch",
    "test:ci": "npm run test:preflight && jest --ci --coverage --maxWorkers=2",
    "test:schema-gate": "npm run test:preflight && jest --ci --runInBand src/services/__tests__/nodeManager.test.ts",
    "test:coverage": "npm run test:preflight && jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop woly-cnc",
    "pm2:restart": "pm2 restart woly-cnc",
    "pm2:logs": "pm2 logs woly-cnc",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete woly-cnc",
    "prod": "npm run build && npm run pm2:start",
    "typecheck": "tsc --noEmit",
    "test:preflight": "node scripts/test-preflight.js"
  },
  "private": true,
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@kaonis/woly-protocol": "*",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "lru-cache": "^11.2.6",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  }
}
