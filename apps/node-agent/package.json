{
  "name": "@woly-server/node-agent",
  "version": "0.0.1",
  "description": "WakeOnLan Application Server â€” per-LAN node agent",
  "main": "dist/app.js",
  "scripts": {
    "test": "npm run test:preflight && jest",
    "test:watch": "npm run test:preflight && jest --watch",
    "test:coverage": "npm run test:preflight && jest --coverage",
    "test:ci": "npm run test:preflight && jest --ci --coverage --maxWorkers=2",
    "test:unit": "npm run test:preflight && jest --testPathPattern='.unit.test.ts'",
    "test:integration": "npm run test:preflight && jest --testPathPattern='.integration.test.ts'",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "ts-node src/app.ts",
    "dev": "nodemon --watch src --exec ts-node src/app.ts",
    "prod": "npm run build && npm run pm2:start",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "format": "prettier --write src",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop woly-node",
    "pm2:restart": "pm2 restart woly-node",
    "pm2:logs": "pm2 logs woly-node",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete woly-node",
    "test:preflight": "node scripts/test-preflight.js"
  },
  "private": true,
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@kaonis/woly-protocol": "*",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "5.2.1",
    "express-rate-limit": "^8.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "joi": "^18.0.1",
    "lru-cache": "^11.2.2",
    "ping": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "wake_on_lan": "1.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  }
}
